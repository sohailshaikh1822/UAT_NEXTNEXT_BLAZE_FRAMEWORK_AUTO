<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" parallel="classes">
    <listeners>
        <listener class-name="utils.ExtentReportManager"/>
        <listener class-name="utils.ExtentSuiteListener"/>
    </listeners>


    <test verbose="2" preserve-order="true" name="test plan Test ">
        <parameter name="browser" value="${browser}"/>
        <parameter name="mode" value="${mode}"/>
        <packages>
            <package name="testCases.testPlanTabTestCase"/>
        </packages>
    </test>

    <test verbose="2" preserve-order="true" name="requirement Test ">
        <parameter name="browser" value="${browser}"/>
        <parameter name="mode" value="${mode}"/>
        <packages>
            <package name="testCases.requirementTabTestCase"/>
        </packages>
    </test>

    <test verbose="2" preserve-order="true" name="author Test ">
        <parameter name="browser" value="${browser}"/>
        <parameter name="mode" value="${mode}"/>
        <packages>
            <package name="testCases.authorTabTestCase"/>
        </packages>
    </test>

    <test verbose="2" preserve-order="true" name="Execute Test ">
        <parameter name="browser" value="${browser}"/>
        <parameter name="mode" value="${mode}"/>
        <packages>
            <package name="testCases.ExecuteTestCaseTab"/>
        </packages>
    </test>
</suite>